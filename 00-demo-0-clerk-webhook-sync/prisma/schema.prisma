// Demo 0 : Synchronisation via Webhook (automatique)
// Schéma identique au projet principal

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique                // ID de l'utilisateur Clerk
  email     String   @unique
  firstName String?
  lastName  String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

// NOTES :
// 1. Schéma identique au projet principal
// 2. clerkId séparé de l'id (bonne pratique)
// 3. Synchronisation gérée par webhook (pas de code syncUser)
// 4. Tous les champs sont mis à jour automatiquement via les événements Clerk

